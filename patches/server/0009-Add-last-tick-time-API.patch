-
     // Paper end
 
     // Purpur start
@@ -3017,4 +3016,11 @@ public final class CraftServer implements Server {
         return getServer().lagging;
     }
     // Purpur end
+
+    // Yatopia start
+    @Override
+    public java.time.Duration getLastTickTime() {
+        return net.minecraft.server.MinecraftServer.lastTickTime;
