diff --git a/src/main/java/org/bukkit/Server.java b/src/main/java/org/bukkit/Server.java
index 213b8e86a5e5fae961000141a2bc35e45488ca92..ada5e36e387965d00b2b0b29ae261bac3b4c9d23 100644
