diff --git a/src/main/java/org/bukkit/Server.java b/src/main/java/org/bukkit/Server.java
index 5e951eba9c4865a4727c4c0e58783b0ece357ac0..e56e75b901a5377b844271fa651eb3fdfc1e3fd3 100644
