diff --git a/src/main/java/org/bukkit/Server.java b/src/main/java/org/bukkit/Server.java
index 053806a9f8853e54f83fc32fef44257c30a12cf2..a20fb8df2045191ec10d7c44fe511eef7936f77f 100644
