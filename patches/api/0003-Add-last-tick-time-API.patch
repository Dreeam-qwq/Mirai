diff --git a/src/main/java/org/bukkit/Server.java b/src/main/java/org/bukkit/Server.java
index 9a85d76dda67c06b4e9fa3d26dfef6141bbc842e..24df7a81d82aa6e53b1f1a345760fe95473ae226 100644
