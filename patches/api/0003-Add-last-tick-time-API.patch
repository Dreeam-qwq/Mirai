diff --git a/src/main/java/org/bukkit/Server.java b/src/main/java/org/bukkit/Server.java
index 5ccba1fdd719516c7fa74e0d7729d07c47fad018..894ec4488f6c64efb0e12cede3089cc372356619 100644
