diff --git a/src/main/java/org/bukkit/Server.java b/src/main/java/org/bukkit/Server.java
index 0d62241f872b97b40d85bed6b0630f6814f1d983..a95b9eb6e7ea87bc6d1478caaaee963592f7b431 100644
